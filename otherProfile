                            stream: queryPostsRecord(
                              queryBuilder: (postsRecord) => postsRecord
                                  .where(
                                    'post_user',
                                    isEqualTo: widget!.postProfile,
                                  )
                                  .orderBy('time_posted', descending: true),
                              limit: 5,
                            ),
                            builder: (context, snapshot) {
                              // Customize what your widget looks like when it's loading.
                              if (!snapshot.hasData) {
                                return Center(
                                  child: LinearProgressIndicator(
                                    color: FlutterFlowTheme.of(context).primary,
                                  ),
                                );
                              }
                              List<PostsRecord> postsfeedPostsRecordList =
                                  snapshot.data!;
                              if (postsfeedPostsRecordList.isEmpty) {
                                return Image.asset(
                                  'assets/images/like_button.png',
                                );
                              }

                              return ListView.builder(
                                padding: EdgeInsets.zero,
                                primary: false,
                                shrinkWrap: true,
                                scrollDirection: Axis.vertical,
                                itemCount: postsfeedPostsRecordList.length,
                                itemBuilder: (context, postsfeedIndex) {
                                  final postsfeedPostsRecord =
                                      postsfeedPostsRecordList[postsfeedIndex];
                                  return wrapWithModel(
                                    model: _model.postModels.getModel(
                                      postsfeedPostsRecord.reference.id,
                                      postsfeedIndex,
                                    ),
                                    updateCallback: () => safeSetState(() {}),
                                    child: PostWidget(
                                      key: Key(
                                        'Keybqt_${postsfeedPostsRecord.reference.id}',
                                      ),
                                      userPhotoRef:
                                          postsfeedPostsRecord.postUser,
                                      userDisplayNameRef:
                                          postsfeedPostsRecord.postUser,
                                      postCut: postsfeedPostsRecord.postCut,
                                      postDoneness: valueOrDefault<String>(
                                        postsfeedPostsRecord.postDoneness,
                                        'Unknown doneness',
                                      ),
                                      postLocationName:
                                          postsfeedPostsRecord.postLocationName,
                                      postLocationCity: valueOrDefault<String>(
                                        postsfeedPostsRecord.postLocationCity,
                                        'London',
                                      ),
                                      time: valueOrDefault<String>(
                                        dateTimeFormat(
                                          "relative",
                                          postsfeedPostsRecord.timePosted,
                                          locale: FFLocalizations.of(context)
                                              .languageCode,
                                        ),
                                        'Unknown time ago',
                                      ),
                                      postTitle: valueOrDefault<String>(
                                        postsfeedPostsRecord.postTitle,
                                        'Untitled',
                                      ),
                                      postCookTIme: valueOrDefault<double>(
                                        postsfeedPostsRecord.postCookingTime,
                                        5.0,
                                      ),
                                      postGrams: valueOrDefault<double>(
                                        postsfeedPostsRecord.postWeight,
                                        200.0,
                                      ),
                                      rating: postsfeedPostsRecord.rating,
                                      postPhotoPath:
                                          postsfeedPostsRecord.postPhoto,
                                      numLikes: valueOrDefault<String>(
                                        formatNumber(
                                          postsfeedPostsRecord
                                              .postLikedBy.length,
                                          formatType: FormatType.compact,
                                        ),
                                        'No',
                                      ),
                                      likedPostRef:
                                          postsfeedPostsRecord.reference,
                                      numLikesQuery: postsfeedPostsRecord
                                          .postLikedBy.length,
                                      numComments: formatNumber(
                                        postsfeedPostsRecord.numComments,
                                        formatType: FormatType.compact,
                                      ),
                                      numCommentsQuery:
                                          postsfeedPostsRecord.numComments,
                                      isLiked: postsfeedPostsRecord.postLikedBy
                                          .contains(currentUserReference),
                                    ),
                                  );
                                },
                              );
                            },
                          ),
                          Opacity(
                            opacity: 0,
                            child: Container(
                              width: 100,
